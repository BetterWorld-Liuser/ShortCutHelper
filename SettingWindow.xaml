<Window x:Class="xiaochao.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xiaochao" 
        mc:Ignorable="d"
        x:Name="Setting"
        Title="设置" Height="450" Width="800">
    
    <Grid>
        <Button Template="{StaticResource button_style}" Width="70" Height="30" Content="确定" Background="{Binding ElementName=Setting,  Path=Config.Decoration_color}" HorizontalAlignment="Left" Margin="126,165,0,0" VerticalAlignment="Top"/>
        <Button Template="{StaticResource button_style}" Width="70" Height="30" Content="取消" Background="{Binding ElementName=Setting,  Path=Config.Decoration_color}" HorizontalAlignment="Left" Margin="126,217,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
